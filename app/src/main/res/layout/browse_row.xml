<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:descendantFocusability="blocksDescendants"
        android:padding="3sp"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/adoptedCAPS"
            android:id="@+id/adoptedOverlayTV"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignRight="@+id/animalID"
            android:layout_alignEnd="@+id/animalID"
            android:layout_alignBottom="@+id/animalAge"
            android:visibility="invisible"
            android:background="#46000000"
            android:gravity="center" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/animalImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textSize="28sp"
            android:textStyle="bold"
            android:id="@+id/animalName"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/animalImage"
            android:layout_toEndOf="@+id/animalImage"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="#000000"
            android:id="@+id/animalAge"
            android:layout_alignBottom="@+id/animalImage"
            android:layout_toRightOf="@+id/animalImage"
            android:layout_toEndOf="@+id/animalImage"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="#000000"
            android:id="@+id/animalID"
            android:layout_alignTop="@+id/animalAge"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFav"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#00000000"
            android:visibility="visible" />


    </RelativeLayout>

</LinearLayout>